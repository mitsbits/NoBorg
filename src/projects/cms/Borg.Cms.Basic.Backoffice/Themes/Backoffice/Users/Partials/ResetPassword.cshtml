@using Borg.Cms.Basic.Lib.Features.Auth.Management.Users
@model ResetPasswordViewModel

<div class="box box-default box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">Set new password</h3>
    </div>
    <div class="box-body">
        <form asp-controller="Users" , asp-action="ResetPassword" method="post" asp-route-redirecturl="@Orchestrator.Device.RedirectToDevice()" role="form">
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                @*<label asp-for="Password" class="form-control-label"></label>*@
                <input type="text" class="form-control" asp-for="Password" placeholder="@Html.DisplayNameFor(m=>m.Password)" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-block">Update password</button>
            </div>
        </form>
    </div>
</div>