@using Borg.Cms.Basic.Lib.Features.Auth.Management.Users
@model ProfileCommand

@{

}

<div class="box box-default box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            Profile
        </h3>
    </div>
    <div class="box-body">

        <form asp-controller="Users" , asp-action="Profile" method="post" asp-route-redirecturl="@Orchestrator.Device.RelativePath()" role="form">

            <input type="hidden" asp-for="CorrelationId" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <input type="text" class="form-control" asp-for="FirstName" placeholder="@Html.DisplayNameFor(m => m.FirstName)" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" asp-for="LastName" placeholder="@Html.DisplayNameFor(m => m.LastName)" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-secondary btn-block">Update profile</button>
            </div>
        </form>
    </div>
</div>