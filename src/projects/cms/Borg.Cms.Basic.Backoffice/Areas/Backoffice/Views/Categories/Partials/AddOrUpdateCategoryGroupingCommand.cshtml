@model Borg.Cms.Basic.Lib.Features.CMS.Categories.Commands.AddOrUpdateCategoryGroupingCommand
<form method="post" asp-area="Backoffice" asp-controller="Categories" asp-action="GroupingCommand" asp-route-redirecturl="@Orchestrator.Device.RelativePath()">
    <div class="input-group input-group">
        <input type="hidden" asp-for="Timestamp"/>
        <input type="hidden" asp-for="CorrelationId"/>
        <input type="hidden" asp-for="RecordId"/>
        <input type="text" class="form-control" asp-for="FriendlyName" placeholder="Enter name of new Category Grouping">
        <span class="input-group-btn">
            <button type="submit" class="btn btn-primary btn-flat"><i class="fa fa-check"></i></button>
        </span>
    </div>
</form>