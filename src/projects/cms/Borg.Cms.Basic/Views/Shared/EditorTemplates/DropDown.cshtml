@using Borg.MVC.Services.Editors
@model DropDown

<input type="hidden" asp-for="HtmlId" />

<div class="form-group">
    <label asp-for="@Model"></label>
    <select id="@Model.HtmlId" class="form-control" asp-for="@Model.Value" asp-items="@Model.DropDownItems()"></select>
</div>
<script type="text/javascript" device id="@(Model.HtmlId)_script">
    $(function() {
        $("#" + '@Model.HtmlId').select2({
            width: 'resolve',
            tags: false,
            multiple: false,
            placeholder: 'Select an option',
            theme: "bootstrap"
        });
    });
</script>