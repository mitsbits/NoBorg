@model Borg.Cms.Basic.Lib.Features.Content.Commands.ContentItemCreateOrUpdateCommand
@{
    var redirecturl = Orchestrator.Device.RouteValues.ContainsKey("redirecturl") ? Orchestrator.Device.RouteValues["redirecturl"] : @Orchestrator.Device.RelativePath();
}
<form role="form" asp-controller="ContentItems" asp-action="Item" method="post" asp-route-redirecturl="@redirecturl" asp-route-id="">
    <div class="box-body">
        <div class="form-group hidden">
            <label asp-for="RecordId"></label>
            <input type="text" class="form-control" asp-for="RecordId" placeholder="@Html.NameFor(x=>x.RecordId)">
            <span asp-validation-for="RecordId" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title" placeholder="@Html.NameFor(x => x.Title)">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Subtitle"></label>
            <input type="text" class="form-control" asp-for="Subtitle" placeholder="@Html.NameFor(x => x.Subtitle)">
            <span asp-validation-for="Subtitle" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Slug"></label>
            <input type="text" class="form-control" asp-for="Slug" placeholder="@Html.NameFor(x => x.Slug)">
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Author"></label>
            <input type="text" class="form-control" asp-for="Author" placeholder="@Html.NameFor(x => x.Author)">
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="PublishDate"></label>
            <input type="text" class="form-control datetimepicker" asp-for="PublishDate" placeholder="@Html.NameFor(x => x.PublishDate)">
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>
        
        <div class="form-group ">
            <label asp-for="LastRevisionDate"></label>
            <input type="text" class="form-control datetimepicker" asp-for="LastRevisionDate" placeholder="@Html.NameFor(x => x.LastRevisionDate)">
            <span asp-validation-for="LastRevisionDate" class="text-danger"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Body"></label>
            @Html.EditorFor(m=>m.Body)
            @*<input type="text" class="form-control" asp-for="Body" placeholder="@Html.NameFor(x => x.Body)">*@
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>
           
        <div class="form-group text-danger" asp-validation-summary="ModelOnly" >
        </div>
    </div>
    <div class="box-footer text-right">
        <button class="btn btn-primary">
            <i class="fa fa-check"></i>
        </button>
    </div>
</form>


<script id="content-item-command-form" device weight="101" script-position="Bottom">
    $(function () {
        $('.datetimepicker').datetimepicker();
    });
</script>
