@model Web.Features.Workers.WorkerRolesViewModel


@*<div class="box box-default">*@
    <div class="box-header with-border">
        <h3 class="box-title">Roles</h3>
    </div>
    <form role="form" asp-controller="Workers" asp-action="SetRoles" method="post" asp-route-redirecturl="@Orchestrator.Device.Path">


        <input asp-for="Email" type="hidden" />
        <div class="box-body">
            @*<div class="form-inline">*@
                @for (var i = 0; i < Model.RoleOptions.Length; i++)
                {
                    <div class="form-group">
                        <input asp-for="@Model.RoleOptions[i].Key" type="hidden"/>
                    <label>
                        <input type="checkbox" asp-for="@Model.RoleOptions[i].Selected" /><span> @Model.RoleOptions[i].Key</span>
                    </label>
                    </div>
                }

            @*</div>*@


        </div>

        @if (UserSession.IsAdminOrManager())
        {

            <div class="box-footer">


                <button type="submit" class="btn btn-default pull-right">Save</button>


            </div>

        }
    </form>
@*</div>*@