@using Borg.Bookstore.Features.Users.Commands

@model RegistrationRequestCommand

<div class="register-box">
    <div class="register-logo">
        <a asp-controller="Home" asp-action="Home"> <img src="~/dist/assets/borglogo.png" alt="borg" class=" image" /></a>
    </div>

    <div class="register-box-body">
        <p class="login-box-msg">Create a new account</p>

        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="form-group has-feedback">
                <input type="email" asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Email)">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" asp-for="Password" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.Password)">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.ConfirmPassword)">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="text" asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.FirstName)">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="text" asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.LastName)">
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            @*<div class="form-group has-feedback">
                    <label asp-for="Timezone" ></label>

                    <select asp-for="Timezone" asp-items="@Model.TimeZoneOptions" class="select2 form-control"></select>
                    <span asp-validation-for="Timezone" class="text-danger"></span>
                </div>*@

            <div class="row">
                <div class="col-xs-8">
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

        <a href="@Url.Action("Login")" class="text-center">I already have a membership</a>
    </div>
    <!-- /.form-box -->
</div>